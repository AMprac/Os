// Write a program to display reverse of given number

#include <iostream>
using namespace std;
int reverse(int n){
int rev;
int rem;
while(n!=0){
rem=n%10;
rev=rev*10+rem;
n=n/10;
}
return rev;
}
int main() {
int num;
cout<<"Enter a number: ";
cin>>num;
int result=reverse(num);
cout<<"Reverse of "<<num<<" is: "<<result<<endl;
return 0;
}
